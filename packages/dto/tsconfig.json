{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noEmit": false,
    "paths": {
      "@/*": ["./src/*"],
      "@project/entities": ["../entities/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../entities" }
  ]
}